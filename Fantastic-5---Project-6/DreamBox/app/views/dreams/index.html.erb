<h1>Write Down your Dreams in your DreamBox</h1>
<div class="col-md-8 col-md-offset-2">
  
      <!= Search part!>
        <%= form_tag dreams_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search] %></input>
           <%= submit_tag "Search" %>
        <% end %>
        <br><br>
  <%= link_to ' Create a new Dreambox Here ', new_dream_path, class:"btn btn-lg btn-primary"%>
</div>


   <div class="transitions-enabled" id="dreams">   
    <% @dreams.each do |dream| %>
      <div class="box panel panel-default">
          <tr>
            <td><div class="panel-heading"><%= dream.description.html_safe %></div></td>
            <br>
            <%= '-Dream at:' %>
            <td><%= dream.start_time %></td>
            
            
                 <ul class="pager">
                     <li><td><%= link_to 'Show', dream %></td></li>
                     <li> <td><%= link_to 'Edit', edit_dream_path(dream) %></td></li>
                     <li> <td><%= link_to 'Delete', dream, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                  </ul>
                </div>
            </td>
          </tr>
       
            <% end %>
       </div>
      </div>
    </div>


</div>