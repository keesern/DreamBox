<p id="notice"><%= notice %></p>
<!= generate the calendar for current user>
<br><br>
<div class="col-md-8 col-md-offset-2">


<%= month_calendar events: @dreams do |date, dreams| %>
  <%= date.day %>

  <% dreams.each do |dream| %>
    <div>
      <!= only show the first three words in description>
      <li><%= link_to dream.description.split[0..3].join(' ').html_safe, dream %></li>
    </div>
  <% end %>
<% end %>

